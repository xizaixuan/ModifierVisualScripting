.ge-node--token
{
    flex-direction: row;
    background-color: #595959;
    border-radius: var(--border-radius);
}

.ge-node--token:checked {
    background-color: #4086C0;
}

.ge-node--token .ge-node__title-container {
    background-color: transparent;
    border-radius: 0;
}

.ge-node--token #title.node-title .node-title__label {
    font-size: 14px;
}

.ge-node--token .port-connector__label {
    display: none;
}

.ge-node--token .ge-port-container {
    justify-content: center;
}
